@page
@model Janus.Gui.Pages.Admin.Techs.IndexModel

<ol class="breadcrumb">
    <li><a asp-page="/Index">Home</a></li>
    <li><a asp-page="/Admin/Config">Configuration</a></li>
    <li class="active">Techs</li>
</ol>

<div class="row">
    <div class="col-md-2">
        @await Html.PartialAsync("../ConfigMenu.cshtml")
    </div>
    <div class="col-md-10">
        <p>
            <a asp-page="Create" class="btn btn-primary">Create New</a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Techs[0].FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Techs[0].LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Techs[0].EmailAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Techs[0].DateLogged)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Techs)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateLogged)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.GUID" class="btn btn-default">Edit</a>
                                <a asp-page="./Details" asp-route-id="@item.GUID" class="btn btn-default">Details</a>
                                <a asp-page="./Delete" asp-route-id="@item.GUID" class="btn btn-default">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

