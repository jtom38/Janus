                </a>
            </li>

        </ul>
    </div>

    @if (Model.ViewMode.Equals("table"))
    {
        <div id="page-content-wrapper">
            <h4>Computer Monitor</h4>
            <hr />
            <table class="table table-striped">
                <tr>
                    <th>Computer Name</th>
                    <th>Last Report</th>
                    <th>Current Status</th>
                    <th></th>
                </tr>
                
                <tr>
                    <td class="text-vertical-align-middle">
                        DMI-DEV01
                    </td>
                    <td class="text-vertical-align-middle">
                        3/01/2018
                    </td>
                    <td class="text-vertical-align-middle">
                        Offline
                    </td>
                    <td class="text-vertical-align-middle">
                        <a asp-page="/Computers/Details" asp-route-id="debug">
                            <img src="~/images/Navbar/icons8-view-details-96.png" width="32"
                                 data-toggle="tooltip" title="Open" />
                        </a>
                    </td>
                </tr>

            </table>
        </div>

    }

    @if (Model.ViewMode.Equals("card"))
    {


    }

    @if (Model.ViewMode.Equals("panel"))
    {
        <div id="page-content-wrapper">
            <div class="jlist-wrapper">
                <div class="jlist jlist-default " id="HardwareInformation">
