                <div class="jlist jlist-default " id="HardwareInformation">
                    <div class="jlist-heading " role="tab" id="HardwareInfo">
                        <div class="jlist-title" data-toggle="collapse" data-parent="#accordion" href="#HardwareData" aria-expanded="false" aria-controls="HardwareData">
                            <ul class="list-inline">
                                <li>
                                    <img src="~/images/Navbar/icons8-monitor-96.png" width="32" />
                                    DEV-01.directorsmortgage.net
                                </li>
                                <li class="pull-right">
                                    <img src="~/images/Navbar/icons8-offline-96.png" width="32" />
                                    Online
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div id="HardwareData" class="jlist-collapse collapse" role="tabjlist" aria-labelledby="HardwareInfo">
                        <div class="jlist-body">
